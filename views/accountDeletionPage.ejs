<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User Feedback Form</title>
    <style>
        body {
            font-family: "Helvetica Neue", sans-serif;
            background-color: #61dafb;
            font-size: 20px;
        }
        .centered {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .box {
            width: 450px;
            height: auto;
            background-color: aliceblue;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            border-radius: 10px;
            padding: 20px;
        }
        .form-control {
            width: 100%;
            margin-bottom: 20px;
        }
        form {
            width: 100%;
        }
        p {
            font-size: 10px;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="centered">
        <div class="box">
            <h3>Welcome, <span id="email"></span></h3>
            <label for="feedback">We are sorry for you to leave, please give us your comments or feedback on why you are going to delete your account.</label>
            <form id="deleteUserForm">
                <label for="feedback">Feedback:</label><br>
                <textarea id="feedback" name="feedback" rows="4" cols="50" class="form-control"></textarea><br>
                <label for="feedback"><strong>Deleting your account would mean:</strong></label>
                <ul>
                    <li>Deleting your data such as name, birth date, number, full name</li>
                    <li>Deleting your subscription</li>
                    <li>Deleting the number of wings you bought (balance remaining)</li>
                    <li>No refunds or returns</li>
                </ul><br>
                <p>For more information please email, rs@ravensanz.ca</p>
                <input type="submit" value="Submit Feedback" class="form-control">
            </form>
        </div>
    </div>

    <script>
        // Function to retrieve cookie value by name
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Get email from cookie
            const userCookie = getCookie('user');
            let email = '';

            if (userCookie) {
                const userData = JSON.parse(userCookie);
                email = userData.email_add;
            }

            // Update email span with the retrieved email
            document.getElementById('email').textContent = email;
        });

        // Function to handle form submission
        document.getElementById('deleteUserForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            // Get id and email_add from cookies
            const userCookie = getCookie('user');
            let id, email_add;

            if (userCookie) {
                const userData = JSON.parse(userCookie);
                id = userData.id;
                email_add = userData.email_add;
            }

            console.log('ID:', id);
            console.log('Email:', email_add);

            // Get feedback from textarea
            const feedback = document.getElementById('feedback').value;
            console.log('Feedback:', feedback);

            // Construct request body
            const requestBody = {
                id: id,
                email_add: email_add,
                feedback: feedback
            };

            console.log('Request Body:', requestBody);

            // Send POST request to API endpoint
            fetch('/api/v1/account/deleteuser/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(requestBody)
            })
            .then(response => {
                console.log('Response:', response);
                if (response.ok) {
                    alert('Feedback submitted successfully!');
                } else {
                    response.json().then(data => {
                        console.log('Error Data:', data);
                        alert('Error: ' + data.error);
                    }).catch(error => {
                        console.error('Error parsing JSON:', error);
                        alert('Error submitting feedback. Please try again.');
                    });
                }
            })
            .catch(error => {
                console.error('Fetch Error:', error);
                alert('Error submitting feedback. Please try again.');
            });
        });
    </script>
</body>
</html>




